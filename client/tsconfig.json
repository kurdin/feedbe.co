{
	"compilerOptions": {
		"pretty": true,
		"target": "esnext",
		"module": "commonjs",
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"lib": ["es2017", "esnext", "esnext.asynciterable", "dom", "dom.iterable"],
		"types": ["react"],
		"jsx": "preserve",
		"noUnusedLocals": true,
		"paths": {
			"*": ["../node_modules/*", "./src/types/*"],
			"@utils": ["src/utils/*"],
			"shared/*": ["shared/*"],
			"components/*": ["components/*"],
			"@client/*": ["../src/*"]
		},
		"rootDir": "./src",
		"baseUrl": "./src",
		"noEmit": true,
		"skipLibCheck": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"typeRoots": ["../node_modules/@types"]
	},
	"exclude": ["../node_modules"],
	"include": ["./src/**/*"]
}
